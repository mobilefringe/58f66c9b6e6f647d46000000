<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var published_events = [];
            var past_events = [];
            $.each( events , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_events.push(val);
                } else {
                    past_events.push(val);
                }
            });
            if(published_events.length > 0){
                renderEvents("#promos_container","#promos_template", published_events);
            } else {
                $('#no_promos').show()
            }
            if(past_events.length > 0){
                renderEvents("#past_events_container","#past_events_template", past_events);
            }
            show_content();
        }
        loadMallData(renderAll); 
    });
</script>