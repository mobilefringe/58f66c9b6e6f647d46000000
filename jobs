                <script id="mall_jobs_template" type="x-tmpl-mustache/text">
                    <div class="widget widget-job">
                        <div class="widget_right_panel">
                            <p class="text text-34">{{store_name}}</p>
                            <a href="/jobs/{{slug}}"><p class="text text-33">{{name}}</p></a>
                            <p class="text text-27">Application Deadline: {{end_date}}</p>
                            <p class="text text-28">{{description}}</p>
                        </div>
                    </div>  
                </script>
            </div>
