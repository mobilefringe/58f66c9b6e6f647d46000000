<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var new_stores = getNewStoresList();
            console.log(new_stores)
            var new_stores = [];
            $.each(new_stores, function(key, val){
                if(val.is_new_store === true && val.is_coming_soon_store === false){
                    new_stores.push(val);
                } 
            });
            if(new_stores.length > 0){
                renderNewStores('#new_store_container', '#new_store_template', new_stores);
            } else {
                $("#no_stores").show();
            }
        }
        loadMallData(renderAll); 
    });
</script>