<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var new_stores_list = getNewStoresList();
            var new_stores = [];
            $.each(new_stores_list, function(key, val){
                if(val.is_new_store === true && val.is_coming_soon_store === false){
                    new_stores.push(val);
                } 
            });
            if(new_stores.length > 0){
                renderNewStores('#new_store_container', '#new_store_template', new_stores);
            } else {
                $("#no_stores").show();
            }
            show_content();
        }
        loadMallData(renderAll); 
    });
</script>